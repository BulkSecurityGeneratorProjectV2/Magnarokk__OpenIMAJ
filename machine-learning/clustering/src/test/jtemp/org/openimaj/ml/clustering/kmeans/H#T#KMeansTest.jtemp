package org.openimaj.ml.clustering.kmeans;

import static org.junit.Assert.assertEquals;

import java.io.File;
import java.io.IOException;

import org.junit.Rule;
import org.junit.Test;
import org.junit.rules.TemporaryFolder;
import org.openimaj.data.RandomData;
import org.openimaj.io.IOUtils;
import org.openimaj.ml.clustering.kmeans.HKMeansMethod;


/**
 * 
 * Test the Hierarchical KMeans algorithm
 * @author Jonathon Hare <jsh2@ecs.soton.ac.uk>, Sina Samangooei <ss@ecs.soton.ac.uk>
 *
 */
public class H#T#KMeansTest {
	/**
	 * Temporary directory for IO tests
	 */
    @Rule
    public TemporaryFolder folder = new TemporaryFolder();
    	
	/**
	 * Test hierarchical kmeans algorithm using an exact and inexact version of the FastKMeans implementation
	 * @throws IOException
	 */
	@Test public void testH#T#KMeans() throws IOException {
		testH#T#KMeans(HKMeansMethod.FASTKMEANS_EXACT);
		testH#T#KMeans(HKMeansMethod.FASTKMEANS_KDTREE);
		
	}
	
	/**
	 * Test hierarchical kmeans loading saving and consistency for a given method
	 * 
	 * @param method
	 * @throws IOException
	 */
	public void testH#T#KMeans(HKMeansMethod method) throws IOException {
		int dim = 128;
		#t# [][] data = RandomData.getRandom#T#Array(1000, dim, (#t#)0, (#t#)128,1);
		H#T#KMeans hikm = new H#T#KMeans(method);
		
		hikm.init(dim, 5, 6,1);
		hikm.train(data);
		
		// read/write saveable
//		Saver<IntCluster> hikmSaveable = hikm.saver();
		
		//ascii
		File saveableFile = folder.newFile("hikmSaveable");
		IOUtils.writeASCII(saveableFile,hikm);
		
		//ascii using readASCII
		H#T#KMeans hikm2 = IOUtils.read(saveableFile,new H#T#KMeans());
		hikm2.optimize(true);
		
		assertHIKMEQ(hikm,hikm2,data);
		
		//binary
		File fileB = folder.newFile("hikm");
		IOUtils.writeBinary(fileB, hikm);
		
		H#T#KMeans hikm2B = IOUtils.read(fileB, new H#T#KMeans());
		hikm2B.optimize(true);
		assertHIKMEQ(hikm,hikm2B,data);
		
		System.out.println(saveableFile.length() + " " + fileB.length());
		
		saveableFile.delete();
		fileB.delete();
	}

	private void assertHIKMEQ(H#T#KMeans hikm, H#T#KMeans hikm2,#t#[][] data) {
		assertEquals(hikm.countActiveLeafNodes(), hikm2.countActiveLeafNodes());
		assertEquals(hikm.getDepth(), hikm2.getDepth());
		assertEquals(hikm.getK(), hikm2.getK());
		assertEquals(hikm.getNDims(), hikm2.getNDims());
		
		for (int i=0; i<data.length; i++)
			assertEquals(
					hikm.push_one(data[i]), 
					hikm2.push_one(data[i])
			);
	}

}
