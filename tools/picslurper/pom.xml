	<artifactId>picslurper</artifactId>
	<version>1.0.6-SNAPSHOT</version>
	<packaging>jar</packaging>
	<name>picslurper</name>
	<description>Tool for grabbing all the images from a social media stream and 
		holding on to some simple stats</description>
